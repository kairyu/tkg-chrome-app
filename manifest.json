{
  "name": "TKG Chrome App",
  "description": "Chrome App for TMK Keymap Generator.",
  "version": "0.9.2",
  "manifest_version": 2,
  "app": {
    "background": {
      "scripts": [
        "async.js",
        "background.js",
        "dfu-buffer.js",
        "dfu-device.js",
        "dfu-programmer.js",
        "dfu-target.js",
        "hid-programmer.js",
        "intel-hex.js",
        "util.js"
      ]
    }
  },
  "icons": {
    "16": "tkg-16.png",
    "48": "tkg-48.png",
    "128": "tkg-128.png"
  },
  "permissions": [
    "hid", "usb", {
      "usbDevices": [
        { "vendorId": 1003, "productId": 8295 },
        { "vendorId": 1003, "productId": 12271 },
        { "vendorId": 1003, "productId": 12272 },
        { "vendorId": 1003, "productId": 12276 },
        { "vendorId": 1003, "productId": 12282 },
        { "vendorId": 4617, "productId": 8999 },
        { "vendorId": 4617, "productId": 9000 },
        { "vendorId": 5824, "productId": 1144 }
      ]
    }
  ],
  "externally_connectable": {
    "matches": [
      "*://tkg.io/*",
      "*://*.tkg.io/*"
    ]
  }
}
